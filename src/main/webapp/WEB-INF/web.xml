<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>LogoutServlet</servlet-name>
  	<display-name>LogoutServlet</display-name>
  	<description></description>
  	<servlet-class>com.samanecorp.secureapp.controller.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>SingUpServlet</servlet-name>
  	<display-name>SingUpServlet</display-name>
  	<description></description>
  	<servlet-class>com.samanecorp.secureapp.controller.SingUpServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>LogoutServlet</servlet-name>
  	<url-pattern>/LogoutServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>SingUpServlet</servlet-name>
  	<url-pattern>/SingUpServlet</url-pattern>
  </servlet-mapping>
   
  <welcome-file-list>
  <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <error-page>
    <!-- Missiong Login  -->
    <error-code>401</error-code>
    <location>/general-error.html</location>
  </error-page>
  
  <error-page>
    <!-- Forbidden  -->
    <error-code>403</error-code>
    <location>/general-error.html</location>
  </error-page>
  
  <error-page>
    <!-- Missing resource  -->
    <error-code>404</error-code>
    <location>/general-error.html</location>
  </error-page>
  
  <error-page>
    <!-- Uncaught Exception  -->
    <error-code>500</error-code>
    <location>/general-error.html</location>
  </error-page>
</web-app>
